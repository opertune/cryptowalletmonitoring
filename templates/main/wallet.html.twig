{% extends 'base.html.twig'%}
{% block title %}{{ 'title'|trans({}, 'wallet')}}{% endblock %}

{% block body %}
<div class="container mt-3 text-dark">
    {% for flash_success in app.flashes('flash_success') %}
    <div class="alert alert-success mb-2" role="success">{{ flash_success }}</div>
    {% endfor %}

    {% for flash_error in app.flashes('flash_error') %}
    <div class="alert alert-danger mb-2" role="error">{{ flash_error }}</div>
    {% endfor %}

    {# Form for adding new wallet #}
    {{ form_start(AddWalletForm, {'attr' : {'class':'customForm'}}) }}
    <fieldset class="mt-5 border rounded-3 p-3">
        <legend class="h3 text-white float-none w-auto px-3">{{ 'addWalletForm.formTitle'|trans({}, 'wallet')}}</legend>

        {{ form_row(AddWalletForm.name) }}
        {{ form_row(AddWalletForm.apiKey) }}
        {{ form_row(AddWalletForm.secretKey) }}
        {{ form_row(AddWalletForm.passPhrase) }}
        {{ form_row(AddWalletForm.save) }}

    </fieldset>
    {{ form_end(AddWalletForm) }}
</div>


<br><br><br><br><br><br><br><br>


<a href="{{ path('updateWalletPrice')}}" class="btn btn-outline-info">Update wallet price</a>
{# All wallet total value #}
<h1 class="text-primary">All Wallet Total: {{allWalletTotal}}$</h1>

{# Display all wallet name and data #}
{% for key, wallets in data %}
<fieldset class="mb-3 border rounded-3 p-3 fieldsetMaxWidth" id="fieldset{{key}}">
    {# Wallet name #}
    <legend class="h3 text-white float-none w-auto px-3">{{wallets['name']}}</legend>

    {# Wallet value #}
    {% if eachWalletTotal[key] is defined %}
    <h3 class="text-center mb-4"><u>Total: {{eachWalletTotal[key]}}$</u></h3>
    {% endif %}
    <div class="table-responsive tableMaxHeight" id="table{{key}}">
        <table class="table table-borderless table-sm text-white text-center">
            <thead class="h5">
                <tr>
                    <th scope="col">Symbol</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tbody>
                {# each coin symbol, quantity, value for each wallet #}
                {% for d in data[key]['data'] %}
                <tr>
                    <td>{{d.symbol}}</td>
                    <td>{{d.quantity}}</td>
                    <td>
                        {% if d.value != 0 %}
                        {{d.value}} $</p>
                        {% else %}
                        Can't find value
                        {% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    {# Button for removing selected wallet #}
    <div class="d-flex justify-content-end mt-3">
        <a class="btn btn-danger me-2" href="{{ path('removeWallet', {'id': data[key]['id'] }) }}"><span
                class="align-middle">Remove wallet</span></a>
        {% if wallets['name'] != 'Gate.io' %}
        <button type="button" class="btn border-white customButton" id="{{key}}">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="28" fill="white"
                class="bi bi-arrow-bar-left rotateSVG" viewBox="0 0 16 16" id="rotateSVG{{key}}">
                <path fill-rule="evenodd"
                    d="M12.5 15a.5.5 0 0 1-.5-.5v-13a.5.5 0 0 1 1 0v13a.5.5 0 0 1-.5.5zM10 8a.5.5 0 0 1-.5.5H3.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L3.707 7.5H9.5a.5.5 0 0 1 .5.5z">
                </path>
            </svg>
        </button>
        {% endif %}
    </div>
</fieldset>
{% endfor %}
{% endblock %}