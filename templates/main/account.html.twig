{% extends 'base.html.twig' %}
{% block title %}{{ 'title'|trans({}, 'account')}}{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h3 class="text-white">{{ 'email'|trans({}, 'account')}} : {{ app.user.username }}</h3>

		{% for flash_success in app.flashes('flash_success') %}
			<div class="alert alert-success my-2" role="success">{{ flash_success }}</div>
		{% endfor %}
		{% for flash_error in app.flashes('flash_error') %}
			<div class="alert alert-danger my-2" role="error">{{ flash_error }}</div>
		{% endfor %}

		{{ form_start(formEditPW, {'attr' : {'id':'registerForm', 'class' : 'customForm'}}) }}
			<h3 class="text-white mt-3">{{ 'editPassword.title'|trans({}, 'account')}}</h1>
			{{ form_row(formEditPW.old_password) }}
			{{ form_row(formEditPW.new_password) }}
			{{ form_row(formEditPW.save) }}
		{{ form_end(formEditPW) }}
	</div>
{% endblock %}
