{% extends 'base.html.twig' %}
{% block head %}
	<link rel="icon" href="{{asset('images/favicons/home.png')}}" type="image/x-icon">
	<meta name="description" content="{{ 'meta'|trans({}, 'home')}}">
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	{{ encore_entry_link_tags('home') }}
{% endblock %}

{% block title %}{{ 'title'|trans({}, 'home')}}{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="text-white text-center pt-5">{{ 'welcomeMessage'|trans({}, 'home')}} Crypto Wallet Monitoring !</h1>

		<div class="container d-flex justify-content-center text-center">
			<p class="display-6 fs-2 mt-4">{{ 'description'|trans({}, 'home')}}</p>
		</div>
		
		<div class="container mt-5 mb-5 d-flex justify-content-center">
			<div class="row">
				<div class="col d-flex justify-content-center">
					<img class="imageSize img-fluid" src="{{asset('images/icons/logo-Binance.png')}}" alt="Binance-logo">
				</div>
				<div class="col d-flex justify-content-center">
					<img class="imageSize img-fluid" src="{{asset('images/icons/logo-Coinbase.png')}}" alt="Coinbase-logo">
				</div>
				<div class="col d-flex justify-content-center">
					<img class="imageSize img-fluid" src="{{asset('images/icons/logo-FTX.png')}}" alt="FTX-logo">
				</div>
				<div class="col d-flex justify-content-center">
					<img class="imageSize img-fluid" src="{{asset('images/icons/logo-Kucoin.png')}}" alt="Kucoin-logo">
				</div>
				<div class="col d-flex justify-content-center">
					<img class="imageSize img-fluid" src="{{asset('images/icons/logo-Gate.io.png')}}" alt="Gate_io-logo">
				</div>
			</div>
		</div>
	</div>
{% endblock %}