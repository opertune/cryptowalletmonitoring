{% set route = app.request.get('_route') %}
<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>
		{% block title %}Welcome!
		{% endblock %}
	</title>
	<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
	{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
	{% block stylesheets %}
		{{ encore_entry_link_tags('app') }}
	{% endblock %}

	{% block javascripts %}
		<script src="https://www.google.com/recaptcha/api.js" async defer></script>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
		{{ encore_entry_script_tags('app') }}
	{% endblock %}
</head>

<body class="d-flex h-100 text-center text-white bg-dark">
	<div class="cover-container d-flex w-75 h-100 p-3 mx-auto flex-column">
		<header class="mb-auto">
			<div>
				<nav class="navbar nav-masthead navbar-expand-lg navbar-dark">
					<div class="container">
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#myNavBar" aria-controls="myNavBar" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon"></span>
						</button>
						<div class="collapse navbar-collapse border-bottom pb-3" id="myNavBar">
							<ul class="navbar-nav me-auto mb-2 mb-lg-0">
								<li class="nav-item">
									<a class="nav-link {% if route == 'home' %}active{% endif %}" href="{{path("home")}}">Home</a>
								</li>
								<li class="nav-item">
									<a class="nav-link {% if route == 'guide' %}active{% endif %}" href="{{path("guide")}}">Guide</a>
								</li>
								<li class="nav-item">
									<a class="nav-link {% if route == 'contact' %}active{% endif %}" href="{{path("contact")}}">Contact</a>
								</li>
								{% if app.user %}
									<li class="nav-item">
										<a class="nav-link {% if route == 'wallet' %}active{% endif %}" href="{{path("wallet")}}">Wallet</a>
									</li>
									<li class="nav-item">
										<a class="nav-link {% if route == 'account' %}active{% endif %}" href="{{path("account")}}">My Account</a>
									</li>
								{% endif %}
							</ul>
							<ul>
								{% if app.user %}
										<a class="btn btn-danger" href="{{path("logout")}}" id="logoutButton">Logout</a>
								{% else %}
										<a class="btn btn-outline-success me-2" href="{{path("login")}}" id="loginButton">Login</a>
										<a class="btn btn-primary" href="{{path("register")}}" id="registerButton">Register</a>
								{% endif %}
							</ul>
						</div>
					</div>
				</nav>
			</div>
		</header>
		<main>
			{% block body %}{% endblock %}
		</main>
		{# <footer class="mt-auto d-flex flex-wrap justify-content-between align-items-center py-2 border-top">
			<p>Cover template for
				<a href="https://getbootstrap.com/" class="text-white">Bootstrap</a>, by
				<a href="https://twitter.com/mdo" class="text-white">@mdo</a>.
			</p>
		</footer> #}
	</div>
</body>

</html>